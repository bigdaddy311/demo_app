<%= form_for(entry.comments.build) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= hidden_field_tag :entry_id, entry.id %>
    <%= f.text_area :content, placeholder: "Write a comment..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
